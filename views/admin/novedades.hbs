<div class="container">
    <div class="row">
        <div class="col">
            <p class="text-end">Bienvenido {{persona}}!!! <a href="" class="btn btn-danger">Salir <i
                        class="fa-solid fa-right-from-bracket"></i></a></p>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <h3>Listado de Novedades</h3>
        </div>
        <div class="col-5 text-end">
            <a href="" class="btn btn-success"><i class="fa-solid fa-plus"></i> Nuevo </a>
        </div>

    </div>
    <div class="row">
        <div class="col">
            <table class="table2 text-center">
                <thead>
                    <tr>
                        <th scope="col">Dia</th>
                        <th scope="col">Ma√±ana</th>
                        <th scope="col">Tarde</th>
                        <th scope="col">Noche</th>
                        <th scope="col" class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each novedades }}
                    <tr>
                        <th scope="row">{{dia}}</th>
                        <td>{{manana}}</td>
                        <td>{{tarde}}</td>
                        <td>{{noche}}</td>
                        <td class="text-end">
                            <a href="" class="btn btn-secondary"><i class="fa-solid fa-pencil"></i></a>
                            <a href="" class="btn btn-secondary"><i class="fa-solid fa-trash"></i></a>
                        </td>
                    </tr>
                    {{/each}}
                    
                </tbody>

            </table>

        </div>

    </div>
</div>