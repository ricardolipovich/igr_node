<div class="container">
    <div class="row">
        <div class="col">
            <form action="/admin/login" method="post">
                <div class="mb-3">
                    <label for="exampleFormControlInput1" class="form-label">Usuario</label>
                    <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Escriba aqui" name="usuario">
                </div>
                <div class="mb-3">
                    <label for="exampleFormControlTextarea1" class="form-label">Contraseña</label>
                    <input type="password" class="form-control" id="exampleFormControlInput1"
                        placeholder="Escriba aqui" name="password">
                </div>
                <div class="col-auto">
                    <button type="submit" class="btn btn-primary mb-3">Confirmar Identidad</button>
                </div>
            </form>
            {{#if error}}
            <p>Usuario/Contraseña Incorrecta</p>
            {{/if}}
        </div>
    </div>
</div>